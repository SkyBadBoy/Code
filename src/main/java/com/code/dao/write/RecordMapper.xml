<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.code.dao.write.RecordMapper">
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache" />-->
    <resultMap type="com.code.domain.Record" id="ClassResultMap">
        <result property="id" column="record_id" />
        <result property="userid" column="record_userid"/>
        <result property="num" column="record_num"/>
        <result property="boxid" column="record_boxid"/>
        <result property="money" column="record_money"/>
        <result property="status" column="record_status"/>
        <result property="createTime" column="record_createTime"/>
        <result property="modifyTime" column="record_modifyTime"/>

        <association property="user" column="record_userid" select="com.code.dao.write.UserMapper.find" fetchType="eager"/>
    </resultMap>
    <!-- 数据库字段 -->
    <sql id="sql">
        record_id,
        record_num,
        record_status,
        record_boxid,
        record_createTime,
        record_modifyTime,
        record_money,
        record_userid
    </sql>
    <sql id="insertSql">
        #{id},
        #{num},
        #{status},
        #{boxid},
        now(),
        now(),
        #{money},
        #{userid}
    </sql>
    <sql id="updateSql">
        record_num=#{num},
        record_status=#{status},
        record_boxid=#{boxid},
        record_modifyTime=now(),
        record_money=#{money},
        record_userid=#{userid}
    </sql>
    <sql id="updateWhere">
        record_id=#{id}
    </sql>
    <!-- 查询条件 -->
    <sql id="where">
        1=1
        <if test="id != null">
            and record_id = #{id}
        </if>
        <if test="userid != null">
            and record_userid = #{userid}
        </if>
        <if test="num != null">
            and record_num = #{num}
        </if>
        <if test="nonum != null">
            and record_num != #{nonum}
        </if>
        <if test="status != null">
            and record_status = #{status}
        </if>
        <if test="nostatus != null">
            and record_status != #{nostatus}
        </if>
        <if test="boxid != null">
            and record_boxid = #{boxid}
        </if>
    </sql>
    <!--表名字 -->
    <sql id="table">
        t_record
    </sql>

    <!--查询全部信息 -->
    <select id="query"  resultMap="ClassResultMap" parameterType="map">
        select <include refid="sql"/>
        from <include refid="table"/>
        <where>
            <include refid="where"/>
        </where>
        ORDER BY record_modifyTime DESC
    </select>

    <select id="queryCount"  resultType="int" parameterType="map">
        select count(*)
        from <include refid="table"/>
        <where>
            <include refid="where"/>
        </where>
    </select>

    <!-- 查找单个 -->
    <select id="find"  resultMap="ClassResultMap" parameterType="long" >
        select <include refid="sql"/>
        from <include refid="table"/>
        where
        <if test="_parameter != null" >
            record_id = #{_parameter}
        </if>

    </select>


    <!-- 插入的代码 -->
    <insert id="insert"  parameterType="com.code.domain.Record">
        insert <include refid="table"/>(<include refid="sql"/>) VALUES (<include refid="insertSql" />)
    </insert>

    <update id="update" parameterType="com.code.domain.Record">
        update <include refid="table"/> set <include refid="updateSql"/> where <include refid="updateWhere"/>
    </update>



</mapper>